generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Tax {
  GST_18
  GST_9
}

enum Notif_Source {
  Inventory_Timeline_Added
  Inventory_Timeline_Removed
  Inventory_Product_Remain
  Inventory_Product_Expiry
  Inventory_Product_MaxStock
  Inventory_Update_Approval_Request
  Inventory_ProductBatch
  Sales_Invoice
  Expense_Invoice
}

enum Sales_Status {
  Pending
  Closed
}

enum Source {
  Sales_Invoice
  Sales_Return
  Purchase_Invoice
  Purchase_Return
}

enum Stock {
  StockIN
  StockOUT
}

enum FinanceCreationType {
  Sales_Estimate
  Sales_Invoice
  Sales_Return
  Expense_Recurring
  Expense_NonRecurring
  Purchase_Order
  Purchase_Invoice
  Purchase_Return
}

enum Inventory {
  None
  Product
  Service
}

enum Location {
  NONE
  Location1
  Location2
}

enum Role {
  Admin
  Staff
  Manager
  Veterinarian
}

enum PermissionOptions {
  Allow
  Never_Allow
  Allow_with_Admin
  Allow_with_Manager
}

model Organization {
  id          Int         @id @default(autoincrement())
  orgName     String      @unique
  orgEmail    String
  gstNo       String
  orgImgUrl   String?
  address     String
  state       String
  pincode     String
  description String
  phoneNo     String
  adminUsers  User[]
  orgBranches OrgBranch[]

  @@index([orgEmail])
}

model OrgBranch {
  id                 Int                 @id @default(autoincrement())
  branchName         String
  org                Organization        @relation(fields: [orgId], references: [id])
  orgId              Int
  assignedUsers      User[]
  orgBranchUserRoles OrgBranchUserRole[]
  inventories        InventorySection[]
  finances           FinanceSection[]
  databases          DatabaseSection[]

  @@index([branchName, orgId])
}

model OrgBranchUserRole {
  id          Int       @id @default(autoincrement())
  orgBranch   OrgBranch @relation(fields: [orgBranchId], references: [id])
  orgBranchId Int
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  role        Role
}

model User {
  id                 Int                 @id @default(autoincrement())
  name               String
  email              String              @unique
  token              String?             @unique
  imageUrl           String?
  phoneNo            String
  altPhoneNo         String?
  hashedPassword     String
  adminOrganizations Organization[]
  orgBranchId        Int?
  lastUsedBranch     OrgBranch?          @relation(fields: [orgBranchId], references: [id])
  userRoles          OrgBranchUserRole[]

  @@index([email, orgBranchId])
}

model Notifications {
  id        Int          @id @default(autoincrement())
  userId    Int?
  orgId     Int?
  url       String?
  message   String?
  data      Json?
  source    Notif_Source
  isRead    Boolean      @default(false)
  createdAt DateTime?    @default(now())

  @@index([userId, orgId])
}

model Permissions {
  id             Int                @id @default(autoincrement())
  permissionName String?
  role           Role?              @unique
  options        PermissionOptions?
}

model InventorySection {
  id           Int                 @id @default(autoincrement())
  name         String
  quantity     Int?
  branch       OrgBranch           @relation(fields: [branchId], references: [id])
  branchId     Int                 @unique
  products     Products[]
  productBatch ProductBatch[]
  service      Services[]
  timeline     InventoryTimeline[]

  @@index([branchId])
}

model FinanceSection {
  id           Int               @id @default(autoincrement())
  name         String
  amount       Float
  branch       OrgBranch         @relation(fields: [branchId], references: [id])
  branchId     Int               @unique
  expenses     Expenses[]
  transactions Transactions[]
  sales        Sales[]
  purchase     Purchases[]
  items        Items[]
  timeline     FinanceTimeline[]
  paymentMethod PaymentMethod[]

  @@index([branchId])
}

model DatabaseSection {
  id           Int            @id @default(autoincrement())
  name         String
  type         String
  branch       OrgBranch      @relation(fields: [branchId], references: [id])
  branchId     Int            @unique
  clients      Clients[]
  patients     Patients[]
  distributors Distributors[]

  @@index([branchId])
}

model Clients {
  id                Int              @id @default(autoincrement())
  clientName        String?
  email             String?          @unique
  contact           String?
  address           String?
  invoiceNo         String[]
  city              String?
  pinCode           String?
  patients          Patients[]
  DatabaseSection   DatabaseSection? @relation(fields: [databaseSectionId], references: [id])
  databaseSectionId Int?

  @@index([databaseSectionId])
  @@map("client")
}

model Patients {
  id                Int              @id @default(autoincrement())
  patientName       String?
  clientId          Int?
  species           String?
  breed             String?
  dateOfBirth       DateTime?
  age               String?
  gender            String?
  isInpatient       Boolean?
  date              DateTime?        @default(now())
  clients           Clients?         @relation(fields: [clientId], references: [id])
  DatabaseSection   DatabaseSection? @relation(fields: [databaseSectionId], references: [id])
  databaseSectionId Int?

  @@index([databaseSectionId, clientId])
}

model Distributors {
  id                Int              @id @default(autoincrement())
  distributorName   String?
  email             String?          @unique
  contact           String?
  gstinNo           String?
  panNo             String?
  address           String?
  city              String?
  pinCode           String?
  date              DateTime?        @default(now())
  DatabaseSection   DatabaseSection? @relation(fields: [databaseSectionId], references: [id])
  databaseSectionId Int?

  @@index([databaseSectionId])
}

model Products {
  id                 Int               @id @default(autoincrement())
  itemName           String?
  defaultUnit        String?
  hsnCode            String?
  tax                Float?
  category           String?
  description        String?
  providers          String[]
  totalQuantity      Int?
  minStock           Int?
  maxStock           Int?
  isApproved         Boolean?          @default(false)
  productBatches     ProductBatch[]
  items              Items[]
  InventorySection   InventorySection? @relation(fields: [inventorySectionId], references: [id])
  inventorySectionId Int?

  @@index([inventorySectionId])
}

model ProductBatch {
  id                 Int                 @id @default(autoincrement())
  distributors       String[]
  quantity           Int?
  productId          Int
  batchNumber        String?
  costPrice          Int?
  location           Location            @default(NONE)
  totalCost          Int?
  maxRetailPrice     Float?
  costPerItem        Int?
  profitMargin       String?
  expiry             DateTime?
  sellingPrice       Int?
  date               DateTime?
  balanceDue         Boolean?
  isApproved         Boolean?            @default(false)
  items              Items[]
  product            Products            @relation(fields: [productId], references: [id])
  inventoryTimeline  InventoryTimeline[] // Add the opposite relation
  InventorySection   InventorySection?   @relation(fields: [inventorySectionId], references: [id])
  inventorySectionId Int?

  @@index([inventorySectionId, productId])
}

model Services {
  id                 Int                 @id @default(autoincrement())
  name               String
  sacCode            String?
  description        String?
  sellingPrice       String?
  tax                Float?
  category           String?
  providers          String[]
  linkProducts       String[]
  serviceCost        Int?
  serviceCharge      Int?
  inventoryEntries   Inventory[]
  inventoryTimeline  InventoryTimeline[] // Add the opposite relation
  InventorySection   InventorySection?   @relation(fields: [inventorySectionId], references: [id])
  inventorySectionId Int?

  @@index([inventorySectionId])
}

model Sales {
  id                Int                  @id @default(autoincrement())
  customer          String?
  date              DateTime?            @default(now())
  notes             String?
  subTotal          Float?
  invoiceNo         String?
  dueDate           DateTime?
  shipping          Float?
  adjustment        Float?
  totalCost         Float?
  overallDiscount   Float?
  totalQty          Int?
  status            String?
  recordTransaction RecordTransaction[]
  type              FinanceCreationType?
  items             Items[]
  financeTimeline   FinanceTimeline[]
  FinanceSection    FinanceSection?      @relation(fields: [financeSectionId], references: [id])
  financeSectionId  Int?

  @@index([financeSectionId])
}

model RecordTransaction {
  id               Int        @id @default(autoincrement())
  amountPaid       Int?
  date             DateTime?  @default(now())
  isAdvancePayment Boolean?
  mode             String?
  moneyChange      String?
  sales            Sales?     @relation(fields: [salesId], references: [id])
  salesId          Int?
  purchases        Purchases? @relation(fields: [purchasesId], references: [id])
  purchasesId      Int?

  @@index([salesId, purchasesId])
}

model Purchases {
  id                   Int                 @id @default(autoincrement())
  distributor          String?
  date                 DateTime?           @default(now())
  dueDate              DateTime
  returnLastDate       DateTime?
  invoiceNo            String?
  purchaseOrderNumber  String?
  distributorInvoiceNo String?
  grnNo                String?
  notes                String?
  shipping             Float?
  adjustment           Float?
  totalCost            Float?
  overallDiscount      Float?
  totalQty             Int?
  status               String?
  recordTransaction    RecordTransaction[]
  type                 String?
  items                Items[]
  financeTimeline      FinanceTimeline[]
  FinanceSection       FinanceSection?     @relation(fields: [financeSectionId], references: [id])
  financeSectionId     Int?

  @@index([financeSectionId])
}

model Expenses {
  id                  Int               @id @default(autoincrement())
  party               String?
  date                DateTime?         @default(now())
  invoiceNo           String?
  subTotal            Float?
  overallDiscount     Float?
  totalCost           Float?
  totalQty            Int?
  recurringStartedOn  DateTime?
  recurringRepeatType String?
  recurringEndson     DateTime?
  dueDate             DateTime?
  shipping            Float?
  adjustment          Float?
  notes               String?
  status              String?
  type                String?
  items               Items[]
  financeTimeline     FinanceTimeline[]
  FinanceSection      FinanceSection?   @relation(fields: [financeSectionId], references: [id])
  financeSectionId    Int?

  @@index([financeSectionId])
}

model Transactions {
  id               Int             @id @default(autoincrement())
  partyName        String?
  subject          String?
  invoiceLink      String?
  receiptNo        String?
  date             DateTime?       @default(now())
  amountPaid       Int
  mode             String?
  moneyChange      String?
  products         Json?
  services         Json?
  FinanceSection   FinanceSection? @relation(fields: [financeSectionId], references: [id])
  financeSectionId Int?

  @@index([financeSectionId])
}

model PaymentMethod{
  id Int @id @default(autoincrement())
  name String?
  FinanceSection   FinanceSection? @relation(fields: [financeSectionId], references: [id])
  financeSectionId Int?
}

model Items {
  id               Int             @id @default(autoincrement())
  taxPercent       Tax?
  taxAmount        Float?
  totalAmount      Float?
  reasons          String?
  category         String?
  sellingPrice     Int?
  quantity         Int?
  lowQty           Int?
  highQty          Int?
  discount         Float?
  name             String?
  productId        Int?
  products         Products?       @relation(fields: [productId], references: [id])
  salesId          Int?
  sale             Sales?          @relation(fields: [salesId], references: [id])
  purchasesId      Int?
  purchases        Purchases?      @relation(fields: [purchasesId], references: [id])
  expensesId       Int?
  expenses         Expenses?       @relation(fields: [expensesId], references: [id])
  productBatchId   Int?
  productBatch     ProductBatch?   @relation(fields: [productBatchId], references: [id])
  FinanceSection   FinanceSection? @relation(fields: [financeSectionId], references: [id])
  financeSectionId Int?

  @@index([salesId, purchasesId, expensesId, financeSectionId])
}

model InventoryTimeline {
  id                 Int               @id @default(autoincrement())
  productId          Int?
  serviceId          Int?
  inventoryType      Inventory?        @default(None)
  stockChange        Stock?            @default(StockIN)
  invoiceType        String?
  quantityChange     Int?
  receiptNo          Int?
  party              String?
  isApproved         Boolean?          @default(false)
  createdAt          DateTime?         @default(now())
  productBatch       ProductBatch?     @relation(fields: [productId], references: [id])
  service            Services?         @relation(fields: [serviceId], references: [id])
  InventorySection   InventorySection? @relation(fields: [inventorySectionId], references: [id])
  inventorySectionId Int?

  @@index([inventorySectionId, productId, serviceId, createdAt])
}

model FinanceTimeline {
  id               Int                  @id @default(autoincrement())
  salesId          Int?
  sale             Sales?               @relation(fields: [salesId], references: [id])
  type             FinanceCreationType?
  createdAt        DateTime
  purchasesId      Int?
  purchases        Purchases?           @relation(fields: [purchasesId], references: [id])
  expensesId       Int?
  expenses         Expenses?            @relation(fields: [expensesId], references: [id])
  FinanceSection   FinanceSection?      @relation(fields: [financeSectionId], references: [id])
  financeSectionId Int?

  @@index([salesId, createdAt, expensesId, financeSectionId])
}
